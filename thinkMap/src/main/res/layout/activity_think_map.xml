<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_100"
    >
    <org.jxxy.debug.thinkMap.treeview.MyTreeView
        android:id="@+id/thinkMapTreeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/userRV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/scale_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/percent_bg"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:typeface="serif"
        android:visibility="gone">
    </TextView>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:layoutDescription="@xml/think_map_top_right_button">
        <View
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/topView"
            app:layout_constraintTop_toTopOf="parent">
        </View>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:background="@drawable/round_white"
            android:padding="12dp"
            app:fabCustomSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/topView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/bg_200"
            android:id="@+id/menuButton"
            android:elevation="9dp"
            android:src="@drawable/more"
   />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:padding="12dp"
            app:borderWidth="0dp"
            android:gravity="center"
            android:backgroundTint="@color/bg_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="invisible"
            android:src="@drawable/fit_screen"
            android:id="@+id/fitWindowButton"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:padding="12dp"
            app:fabSize="normal"
            app:fabCustomSize="40dp"
            android:backgroundTint="@color/bg_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:src="@drawable/move_node"
            android:id="@+id/editButton"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:padding="12dp"
            app:fabSize="normal"
            app:fabCustomSize="40dp"
            android:backgroundTint="@color/bg_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:id="@+id/lastButton"/>
        <ImageView
            android:background="@drawable/round_white"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            app:fabCustomSize="40dp"
            android:backgroundTint="@color/bg_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:id="@+id/nextButton"/>
        <ImageView
            android:background="@drawable/round_white"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            app:fabCustomSize="40dp"
            android:backgroundTint="@color/bg_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomView"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:src="@drawable/clear_tree"
            android:id="@+id/clearButton"/>
        <View
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/bottomView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clearButton"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:backgroundTint="@color/bg_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:id="@+id/removeButton"
        android:src="@drawable/remove_node"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:backgroundTint="@color/bg_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/removeButton"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:id="@+id/addButton"
        android:src="@drawable/add_node"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:backgroundTint="@color/bg_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/addButton"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:id="@+id/modifyButton"
        android:src="@drawable/modify"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:backgroundTint="@color/bg_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/modifyButton"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:id="@+id/quoteButton"
        android:src="@drawable/modify"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drawerView"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/toolbar_height"
        android:layout_gravity="start">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:id="@+id/pictureRecyclerView"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/lineView"
                android:background="@color/bg_300"
                app:layout_constraintTop_toBottomOf="@id/titleTv">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/titleTv"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/pictureRecyclerView"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/lineView"
                android:id="@+id/contentTV">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.drawerlayout.widget.DrawerLayout>