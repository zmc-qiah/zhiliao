<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0">
    </View>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/headPhotoIV">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTV"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/headPhotoIV"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="@id/headPhotoIV">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/dark_grey"
        android:id="@+id/createTimeTV"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="@id/nameTV"
        app:layout_constraintTop_toBottomOf="@id/nameTV"
        app:layout_constraintBottom_toBottomOf="@id/headPhotoIV">
    </TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        android:id="@+id/contentTV"
        android:gravity="left"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toLeftOf="@id/headPhotoIV"
        app:layout_constraintTop_toBottomOf="@id/headPhotoIV"
        android:layout_marginTop="12dp"
        >
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentRV"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        android:background="@drawable/round_img"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentTV"

        android:layout_marginTop="6dp">
    </androidx.recyclerview.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_img"
        android:backgroundTint="@color/light_grey"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rescourcesView"
        app:layout_constraintTop_toBottomOf="@id/contentRV">
    </View>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rescourcesIV"
        android:src="@color/black"
        android:background="@drawable/round_img"
        app:layout_constraintTop_toTopOf="@id/rescourcesView"
        app:layout_constraintLeft_toLeftOf="@id/rescourcesView">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rescourcesView"
        app:layout_constraintBottom_toBottomOf="@id/rescourcesView"
        app:layout_constraintRight_toRightOf="@id/rescourcesView"
        app:layout_constraintLeft_toRightOf="@id/rescourcesIV"
        android:textSize="@dimen/normal_text_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/rescourcesTV"
        >
    </TextView>

