<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:round_corner="12dp"
    android:padding="12dp"
    android:elevation="4dp"
    android:background="@drawable/round_white_12">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent">
    </View>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mid_text_size"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:id="@+id/noteNameTV"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toLeftOf="@id/noteSource"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_mark"
        android:textSize="@dimen/mid_icon_size"
        android:textColor="@color/color_yellow"
        android:id="@+id/noteMarkIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/noteSource"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/small_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noteMarkIcon"
        >
    </TextView>



</org.jxxy.debug.corekit.widget.RoundConstraintLayout>