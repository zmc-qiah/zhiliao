<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/round_bg_100_6"
    app:round_corner="6dp"
    android:layout_height="160dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:elevation="3dp"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:scaleType="fitCenter"
        android:id="@+id/bgTV">
    </ImageView>

    <TextView
        android:id="@+id/userPlanNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintBottom_toTopOf="@id/userPlanRV"
        app:layout_constraintEnd_toStartOf="@+id/usePlanBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userPlanEndDateTimeTV"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/userPlanStartDateTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/dark_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/userPlanEndDateTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPlanStartDateTimeTV">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userPlanRV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/userPlanNameTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getData"
        android:id="@+id/userPlanStateIcon"
        android:textSize="80dp"
        android:textColor="@color/color1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </org.jxxy.debug.corekit.widget.IconFont>
    <Button
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:background="@drawable/background_add_plan_moreplanbutton"
        android:text="更多计划"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/white"
        android:id="@+id/usePlanBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>
