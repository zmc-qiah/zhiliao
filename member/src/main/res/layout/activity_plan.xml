<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/point_task"
    android:paddingTop="30dp"
    tools:context="org.jxxy.debug.member.activity.PlanActivity"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/point_task"
        android:id="@+id/appBar">
        <org.jxxy.debug.corekit.widget.CommonToolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:titleText="学习计划"
            app:if_back="true"
            android:id="@+id/planToolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="enterAlways|scroll">

        </org.jxxy.debug.corekit.widget.CommonToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/point_task"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/NSV"
        >
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/bigTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/num_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
            <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/bigTextTV"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                app:round_corner="10dp"
                android:padding="10dp"
                android:id="@+id/point_day"
                android:background="#BACCFA">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintWidth_percent="0.5"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/smallText1TV"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    app:layout_constraintWidth_percent="0.5"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/smallText2TV"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                </TextView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/smallText1TV"
                    app:layout_constraintLeft_toRightOf="@id/smallText2TV">
                </View>
            </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
            <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/bg_200"
                app:round_corner_top ="12dp"
                android:layout_marginTop="20dp"
                android:id="@+id/RoundConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/point_day"
              >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="所有任务"
                    android:textSize="@dimen/Big_text_size"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/listDescriptionTV">
                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listRecyclerView"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/listDescriptionTV">
                </androidx.recyclerview.widget.RecyclerView>

            </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/bg_200"
                app:layout_constraintTop_toBottomOf="@id/RoundConstraintLayout"
                app:layout_constraintBottom_toBottomOf="parent">
            </View>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    </androidx.core.widget.NestedScrollView>
   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:fabSize="normal"
       app:fabCustomSize="40dp"
       android:src="@drawable/more_2"
       android:id="@+id/addPlanBtn"
       android:backgroundTint="@color/white"
       app:borderWidth="0dp"
       app:layout_anchor="@id/NSV"
       app:layout_anchorGravity="end|bottom"
       android:layout_margin="20dp"
       >
   </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.coordinatorlayout.widget.CoordinatorLayout>