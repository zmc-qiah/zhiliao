<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/transparent"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupNameAndNumTV"
        android:textColor="@color/bg_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>
    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:id="@+id/groupBar"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@id/groupBankDescribeTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       >
    </com.github.mikephil.charting.charts.BarChart>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:text="群组内积分排行，点击查看更多"
        android:id="@+id/groupBankDescribeTV"
        android:textColor="@color/bg_300"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="parent" >
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>