<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:round_corner="20dp"
    android:paddingTop="35dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="20dp">
    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="添加学习计划"
        android:id="@+id/addPlanToolbar"
        app:if_back="false"
        app:layout_constraintTop_toTopOf="parent">
    </org.jxxy.debug.corekit.widget.CommonToolbar>

    <TextView
        android:id="@+id/addPlan1View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="12dp"
        android:text="请输入学习计划"
        android:textColor="@color/text_100"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/addPlanToolbar"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_text_select_note"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:id="@+id/planNameIcon"
        app:layout_constraintBottom_toTopOf="@id/planNameET"
        app:layout_constraintTop_toBottomOf="@id/planNameET"
        app:layout_constraintLeft_toLeftOf="parent">
    </org.jxxy.debug.corekit.widget.IconFont>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:gravity="start"
        android:background="@drawable/background_add_plan"
        app:layout_constraintTop_toBottomOf="@id/addPlan1View"
        app:layout_constraintLeft_toRightOf="@id/planNameIcon"
        android:id="@+id/planNameET"
        android:hint="如:深度学习"
        android:textSize="14sp"
        android:layout_marginLeft="12dp">
    </EditText>

    <TextView
        android:id="@+id/addPlan2View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="请设置截止日期"
        android:textColor="@color/text_100"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/addPlanToolbar"
        app:layout_constraintTop_toBottomOf="@+id/planNameET">

    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_text_select_note"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:id="@+id/planEndTimeIcon"
        app:layout_constraintBottom_toTopOf="@id/planEndTimeET"
        app:layout_constraintTop_toBottomOf="@id/planEndTimeET"
        app:layout_constraintLeft_toLeftOf="parent">
    </org.jxxy.debug.corekit.widget.IconFont>

    <EditText
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/planEndTimeET"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/background_add_plan"
        android:inputType="date"
        android:hint="设置学习计划截至日期"
        android:textSize="14sp"
        android:gravity="start"
        app:layout_constraintLeft_toRightOf="@id/planEndTimeIcon"
        app:layout_constraintTop_toBottomOf="@id/addPlan2View">
    </EditText>
    <View
        android:visibility="gone"
        android:id="@+id/addPlan3View"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/planEndTimeET"
        >
    </View>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加学习事件"
        android:paddingHorizontal="30dp"
        android:background="@drawable/background_add_plan_addplanbutton"
        android:id="@+id/addEvenBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/addPlan3View">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:paddingHorizontal="30dp"
        android:textColor="@color/white"
        android:background="@drawable/background_add_plan_finshbutton"
        android:id="@+id/finBtn"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addEvenBtn"
   >
    </Button>

</org.jxxy.debug.corekit.widget.RoundConstraintLayout>