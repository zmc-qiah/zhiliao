<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/planPointView"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@id/planPointIcon"
        app:layout_constraintBottom_toBottomOf="@id/planPointIcon"
        app:layout_constraintLeft_toLeftOf="@id/planPointIcon"
        app:layout_constraintRight_toRightOf="@id/planPointIcon">
    </View>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planPointIcon"
        android:text="@string/point"
        android:textSize="16sp"
        android:elevation="5dp"
        android:textColor="@color/task_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planNameTV"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/planPointIcon"
        app:layout_constraintRight_toRightOf="@id/planPointIcon"
        app:layout_constraintBottom_toTopOf="@id/planPointIcon">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planDateTV"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/planPointIcon"
        app:layout_constraintRight_toRightOf="@id/planPointIcon"
        app:layout_constraintTop_toBottomOf="@id/planPointIcon">
    </TextView>

    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@color/primary_200"
        android:id="@+id/leftLineView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/planPointIcon"
        >
    </View>

    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@color/primary_200"
        android:id="@+id/rightLineView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/planPointIcon"
        app:layout_constraintTop_toTopOf="parent"
       >
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>