<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_100_forum"
    android:elevation="2dp"
    app:round_corner="12dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0">
    </View>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mid_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/point_task_name"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="这是描述"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/dark_grey"
        android:id="@+id/point_task_describe"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/point_task_name"
        app:layout_constraintBottom_toTopOf="@id/point_task_button"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <Button
        android:id="@+id/point_task_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="2/12"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:background="@drawable/round_p_200"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/pointPB"
        app:layout_constraintRight_toRightOf="parent"
        >
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/point_task_button"
        android:text=""
        android:id="@+id/point_task_button_describe"
        app:layout_constraintLeft_toLeftOf="@id/point_task_button"
        app:layout_constraintRight_toRightOf="@id/point_task_button"
        android:textSize="@dimen/small_text_size"
        android:gravity="center"
        android:textColor="@color/dark_grey">
    </TextView>
    <ProgressBar
        android:id="@+id/pointPB"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/round_img"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/point_task_button"
        style="@style/CustomProgressBar">
    </ProgressBar>

</org.jxxy.debug.corekit.widget.RoundConstraintLayout>