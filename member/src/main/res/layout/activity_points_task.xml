<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/point_task"
    android:paddingTop="@dimen/status_bar_height"
    tools:context="org.jxxy.debug.member.activity.PointsTaskActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/point_task"
        android:id="@+id/appBar">
        <org.jxxy.debug.corekit.widget.CommonToolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:titleText="积分任务"
            app:dark_theme="true"
            app:if_back="true"
            android:id="@+id/planToolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="enterAlways|scroll">
        </org.jxxy.debug.corekit.widget.CommonToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/point_task"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

        >
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/point_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/num_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/point_sum"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:round_corner="10dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/point_day"
            android:background="#BACCFA">
             <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="app陪伴学习0天"
                app:layout_constraintWidth_percent="0.5"
                android:textSize="@dimen/mid_text_size"
                android:gravity="center"
                android:id="@+id/point_days"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="今日积分"
                android:textColor="@color/black"
                app:layout_constraintWidth_percent="0.5"
                android:textSize="@dimen/mid_text_size"
                android:gravity="center"
                android:id="@+id/point_today"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/bg_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/point_today"
                app:layout_constraintLeft_toRightOf="@id/point_days">
            </View>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            app:round_corner_top ="12dp"
            android:layout_marginTop="20dp"
            android:id="@+id/taskRoundConstraintLayout"
            app:layout_constraintTop_toBottomOf="@id/point_day"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="每日任务"
                android:textSize="@dimen/Big_text_size"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/point_task_text">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/point_tasks"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/point_task_text">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintTop_toBottomOf="@id/point_tasks"
                app:layout_constraintBottom_toBottomOf="parent">
            </View>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>