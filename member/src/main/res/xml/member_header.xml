<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="1000"
        app:motionInterpolator="linear">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/memberRecycleView"
            >
        </OnSwipe>
    </Transition>
    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@+id/userPhotoIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="82dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </Constraint>
         <Constraint
             android:id="@id/bgTV"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toTopOf="@id/memberRecycleView"
             android:alpha="1">
         </Constraint>
        <Constraint
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atv"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settingIcon"
            />
        <Constraint
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userPhotoIV" />
        <Constraint
            android:id="@+id/userDescribeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userNameTV"
            app:layout_constraintLeft_toLeftOf="@id/userNameTV"
            app:layout_constraintRight_toRightOf="@id/userNameTV"/>
<!--        <Constraint-->
<!--            android:id="@+id/userDetailBtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@id/userPhotoIV"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/userPhotoIV"-->
<!--            app:layout_constraintLeft_toRightOf="@id/userPhotoIV"-->
<!--            >-->
<!--        </Constraint>-->
        <Constraint
            android:id="@+id/settingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">>
        </Constraint>
        <Constraint
            android:id="@+id/memberRecycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/point"
            />
        <Constraint
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userDescribeTV"
            app:layout_constraintBottom_toTopOf="@id/memberRecycleView">
        </Constraint>

    </ConstraintSet>
     <ConstraintSet
        android:id="@+id/end">
         <Constraint
             android:id="@+id/userPhotoIV"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:layout_marginStart="12dp"
             android:layout_marginTop="38dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             >
         </Constraint>
         <Constraint
             android:id="@id/bgTV"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toTopOf="@id/memberRecycleView"
             android:alpha="0">
         </Constraint>
         <Constraint
             android:id="@+id/userNameTV"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:scaleX="0.75"
            android:scaleY="0.75"
             app:layout_constraintTop_toTopOf="@id/userPhotoIV"
             app:layout_constraintStart_toEndOf="@id/userPhotoIV"
             app:layout_constraintBottom_toTopOf="@id/userDescribeTV" />
         <Constraint
             android:id="@+id/userDescribeTV"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:scaleX="0.75"
             android:scaleY="0.75"
             app:layout_constraintStart_toEndOf="@id/userPhotoIV"
             app:layout_constraintTop_toBottomOf="@id/userNameTV" />
<!--         <Constraint-->
<!--             android:id="@+id/userDetailBtn"-->
<!--             android:layout_width="wrap_content"-->
<!--             android:layout_height="wrap_content"-->
<!--             android:scaleX="0.5"-->
<!--             app:layout_constraintRight_toLeftOf="@id/settingIcon"-->
<!--             app:layout_constraintTop_toTopOf="parent"-->
<!--             app:layout_constraintBottom_toBottomOf="@id/userPhotoIV"-->
<!--             >-->
<!--         </Constraint>-->
         <Constraint
             android:id="@+id/settingIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="46dp"
             android:layout_marginRight="12dp"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toTopOf="parent">>
         </Constraint>
         <Constraint
             android:id="@id/point"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             app:layout_constraintTop_toBottomOf="@id/userDescribeTV"
             android:alpha="0"
             />
         <Constraint
             android:id="@+id/memberRecycleView"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toBottomOf="@id/point"
             />
         <Constraint
             android:alpha="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/atv"
             android:layout_marginEnd="8dp"
             app:layout_constraintTop_toTopOf="@id/settingIcon"
             app:layout_constraintBottom_toBottomOf="@id/settingIcon"
             app:layout_constraintEnd_toStartOf="@id/settingIcon"
             />

     </ConstraintSet>
</MotionScene>