<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/bookMarkBackIv"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:alpha="0.5"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bookMarkTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintLeft_toLeftOf="@id/bookMarkBackIv"
        app:layout_constraintRight_toRightOf="@+id/bookMarkBackIv"
        app:layout_constraintTop_toBottomOf="@+id/bookMarkIv"
        tools:text="AI\n绘画"/>

    <ImageView
        android:id="@+id/bookMarkIv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/bookMarkBackIv"
        app:layout_constraintRight_toRightOf="@+id/bookMarkBackIv"
        app:layout_constraintTop_toTopOf="@id/bookMarkBackIv"/>



</androidx.constraintlayout.widget.ConstraintLayout>