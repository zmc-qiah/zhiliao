<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:round_corner="12dp"
    android:elevation="4dp"
    android:paddingBottom="8dp"
    >
    <ImageView
        android:id="@+id/videoPhotoIV"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/videoTileTV"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/videoPhotoIV"
        >
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/text_line"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/videoTileTV"
        >
    </View>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/author"
        app:round_as_circle="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_line">

        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>

        <org.jxxy.debug.corekit.widget.EllipsizeTextView
            android:id="@+id/authorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:ellipsize_max="8"
            app:ellipsize_mode="end"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/authorImageView"/>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:id="@+id/createDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:lines="1"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintLeft_toRightOf="@id/author"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"/>


    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/readIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/icon_read_new"
        android:textSize="@dimen/small_icon_size"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/readTV"/>

    <TextView
        android:id="@+id/readTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeIcon"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/likeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/like_icon"
        android:textSize="@dimen/small_icon_size"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeTV"/>
    <TextView
        android:id="@+id/likeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/whiteGradientGrayView"
        android:background="@drawable/white_gradient_gray"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV">
    </View>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/whiteGradientGrayView"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV"
        android:gravity="center"
        android:text="视频"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/round_p_200">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:30"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:layout_marginRight="8dp"
        android:id="@+id/videoDurationTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV"
        >
    </TextView>


</org.jxxy.debug.corekit.widget.RoundConstraintLayout>