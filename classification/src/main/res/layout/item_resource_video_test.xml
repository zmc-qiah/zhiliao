<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:round_corner_top="12dp"
    >

    <ImageView
        android:id="@+id/videoPhotoIV"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/videoTileTV"
        android:textSize="18sp"
        android:gravity="center"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/videoPhotoIV"
        >
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/text_line"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/videoTileTV"
        >
    </View>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/bule"
        android:id="@+id/author"
        app:round_as_circle="true"
        app:layout_constraintTop_toBottomOf="@id/text_line">

        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/authorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/authorImageView"
            app:layout_constraintStart_toEndOf="@id/authorImageView"
            app:layout_constraintTop_toTopOf="@id/authorImageView" />
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:id="@+id/createDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:lines="1"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/author"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeTV"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="12dp">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like_fill"
        android:id="@+id/likeIcon"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeTV"
        android:layout_margin="12dp">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readTV"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeIcon"
        android:layout_margin="12dp">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_read"
        android:id="@+id/readIcon"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/readTV"
        android:layout_margin="12dp">
    </org.jxxy.debug.corekit.widget.IconFont>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/white_gradient_gray"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV">
    </View>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV"
        android:gravity="center"
        android:text="视频"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/round_purple">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:30"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_marginRight="8dp"
        android:id="@+id/videoDurationTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/videoPhotoIV"
        >
    </TextView>


</org.jxxy.debug.corekit.widget.RoundConstraintLayout>