<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/status_bar_height">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/level1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/display_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/item_level1" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:alpha="0.9"
            android:background="@drawable/bg_gradual_black_right"
            app:layout_constraintBottom_toBottomOf="@+id/rv_level1"
            app:layout_constraintEnd_toEndOf="@+id/rv_level1"
            app:layout_constraintTop_toTopOf="@+id/rv_level1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/display_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <org.jxxy.debug.corekit.widget.IconFont
                android:id="@+id/display_all_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xe64e;"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/display_all_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/display_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/display_all_text"
                android:textColor="@color/common_text_main_black"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/display_all_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/bg_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level2"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_level2" />
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/level1">

        <TextView
            android:id="@+id/options_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options_comprehensive"
            android:textColor="@color/common_text_hint_dark"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/comprehensiveIcon"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text=""
            android:textColor="@color/common_text_hint_dark"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/options_comprehensive"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/options_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options_time"
            android:textColor="@color/common_text_hint_dark"
            android:textSize="@dimen/small_text_size"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toRightOf="@+id/comprehensiveIcon"
            app:layout_constraintTop_toTopOf="@+id/options_comprehensive"
            app:layout_constraintBottom_toBottomOf="@+id/options_comprehensive"/>

        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/timeIcon"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:text=""
            android:textColor="@color/common_text_hint_dark"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/options_time"
            app:layout_constraintTop_toTopOf="@+id/options_comprehensive"
            app:layout_constraintBottom_toBottomOf="@+id/options_comprehensive"/>

        <TextView
            android:id="@+id/options_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options_temperature"
            android:textColor="@color/common_text_hint_dark"
            android:textSize="@dimen/small_text_size"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toRightOf="@id/timeIcon"
            app:layout_constraintTop_toTopOf="@+id/options_comprehensive"
            app:layout_constraintBottom_toBottomOf="@+id/options_comprehensive"/>

        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:text="&#xe631;"
            android:textColor="@color/common_text_hint_dark"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/options_temperature"
            app:layout_constraintTop_toTopOf="@+id/options_comprehensive"
            app:layout_constraintBottom_toBottomOf="@+id/options_comprehensive"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_gradual_black_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bnsv_level3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/level2"
        app:layout_constraintTop_toBottomOf="@+id/options">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            tools:listitem="@layout/item_resource" />

    </androidx.core.widget.NestedScrollView>>
    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        />-->
</androidx.constraintlayout.widget.ConstraintLayout>