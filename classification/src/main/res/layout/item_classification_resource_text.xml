<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:round_corner="15dp">
    <TextView
        android:id="@+id/tileTV"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6">
    </TextView>


    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/thumbnailRl"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginLeft="12dp"
        app:round_corner="8dp"
        app:layout_constraintLeft_toRightOf="@id/tileTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/thumbnailIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

    <View
        android:id="@+id/text_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/thumbnailRl"
        >
    </View>

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/bule"
        android:id="@+id/author"
        app:round_as_circle="true"
        app:layout_constraintTop_toBottomOf="@id/text_line">
        <ImageView
            android:id="@+id/auImageView"
            android:layout_width="16dp"
            android:layout_height="16dp">
        </ImageView>

        <TextView
            android:id="@+id/authorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/auImageView"
            app:layout_constraintStart_toEndOf="@id/auImageView"
            app:layout_constraintTop_toTopOf="@id/auImageView" />
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:id="@+id/createDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="#CDC9C9"
        android:textSize="10sp"
       app:layout_constraintLeft_toRightOf="@id/author"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/readIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/icon_read"
        android:textSize="15sp"
        android:textColor="@color/primary_100"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/readTV"/>

    <TextView
        android:id="@+id/readTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeIcon"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/likeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/like_icon"
        android:textSize="15sp"
        android:textColor="@color/primary_100"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/likeTV"/>
    <TextView
        android:id="@+id/likeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/aTv"
        android:text="文章"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="1dp"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailRl"
        android:background="@drawable/a">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_200"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/author" />
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>