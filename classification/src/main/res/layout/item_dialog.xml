<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/level1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:text="@string/level1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/underline"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/level1_text"
        app:layout_constraintEnd_toEndOf="@+id/level1_text"
        app:layout_constraintTop_toBottomOf="@+id/level1_text"
        android:background="@color/light_blue苍苍" />

</androidx.constraintlayout.widget.ConstraintLayout>