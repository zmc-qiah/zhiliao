<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Transition
        app:constraintSetStart="@id/menuStartSet"
        app:constraintSetEnd="@id/menuEndSet"
        app:duration="200"
        >
        <OnClick
            app:targetId="@+id/menuView"
            app:clickAction="toggle">
        </OnClick>
    </Transition>
    <ConstraintSet
        android:id="@+id/menuStartSet">
        <Constraint
            android:id="@+id/menuView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Constraint
            android:id="@+id/topMenuConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent">
        </Constraint>
         <Constraint
            android:id="@+id/bottomMenuConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="parent"
              >
        </Constraint>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/menuEndSet">
        <Constraint
            android:id="@+id/menuView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topMenuConstraintLayout"
            app:layout_constraintBottom_toTopOf="@id/bottomMenuConstraintLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Constraint
            android:id="@+id/topMenuConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >
        </Constraint>
        <Constraint
            android:id="@+id/bottomMenuConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </Constraint>
    </ConstraintSet>
</MotionScene>