<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/chapter_review_bg"
    app:round_corner="12dp"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_marked_text"
        android:textSize="@dimen/big_icon_size"
        android:id="@+id/textIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/dark_grey"
      >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mid_text_size"
        android:textColor="@color/bg_200"
        android:gravity="left|top"
        app:layout_constraintTop_toBottomOf="@id/textIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_300"
        android:id="@+id/lineView"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/textView">
    </View>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_text_select_copy"
        android:textSize="@dimen/mid_icon_size"
        android:textColor="@color/bg_100"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:id="@+id/copyIcon"
        app:layout_constraintEnd_toStartOf="@id/searchIcon"
        app:layout_constraintTop_toBottomOf="@id/lineView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/copyTextView"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复制"
        android:textColor="@color/bg_100"
        android:textSize="@dimen/small_text_size"
        android:id="@+id/copyTextView"
        app:layout_constraintLeft_toLeftOf="@id/copyIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyIcon"
        app:layout_constraintRight_toRightOf="@id/copyIcon">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_text_select_search"
        android:textSize="@dimen/mid_icon_size"
        android:textColor="@color/bg_100"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:id="@+id/searchIcon"
        app:layout_constraintTop_toBottomOf="@id/lineView"
        app:layout_constraintBottom_toTopOf="@id/searchTextView"
        app:layout_constraintStart_toEndOf="@id/copyIcon">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="@color/bg_100"
        android:textSize="@dimen/small_text_size"
        android:id="@+id/searchTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/searchIcon"
        app:layout_constraintTop_toBottomOf="@id/searchIcon"
        app:layout_constraintRight_toRightOf="@id/searchIcon"
        >
    </TextView>
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>