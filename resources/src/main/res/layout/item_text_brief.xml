<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/authorImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/primary_200"
        android:id="@+id/authorTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@id/authorImageView"
        app:layout_constraintBottom_toBottomOf="@id/authorImageView"
        app:layout_constraintRight_toLeftOf="@id/authorImageView">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tileTextView"
        android:layout_marginTop="4dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/authorImageView">
    </TextView>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/labelRCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary_200"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/authorImageView"
        app:layout_constraintBottom_toBottomOf="@id/authorImageView"
        app:round_as_circle="true">
        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/labelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </org.jxxy.debug.corekit.widget.IconFont>

        <TextView
            android:id="@+id/lableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/labelIcon"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createDateTextView"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tileTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/shareIcon"
        android:textColor="@color/grey"
        android:text="@string/share"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/tileTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/markIcon"
        android:textColor="@color/grey"
        android:text="@string/mark"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/tileTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shareIcon"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeTextView"
        android:textSize="11sp"
        android:textColor="@color/grey"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toTopOf="@id/markIcon"
        app:layout_constraintBottom_toBottomOf="@id/markIcon"
        app:layout_constraintRight_toLeftOf="@id/markIcon">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/likeIcon"
        android:textColor="@color/grey"
        android:text="@string/like_fill"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/tileTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/likeTextView"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readTextView"
        android:textSize="11sp"
        android:textColor="@color/grey"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toTopOf="@id/markIcon"
        app:layout_constraintBottom_toBottomOf="@id/markIcon"
        app:layout_constraintRight_toLeftOf="@id/likeIcon">
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/readIcon"
        android:textColor="@color/grey"
        android:text="@string/icon_read"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/tileTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/readTextView"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>