<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <RelativeLayout
            android:id="@+id/surface_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#99000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="00:00"
                android:textColor="#ffffff" />


            <!--可以拖动快进的 进度条-->
            <SeekBar
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@null"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/video_seek_progress"
                android:thumb="@drawable/video_seek_thumb" />

            <!-- 总的时长 -->
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="00:00"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:scaleType="center"
                android:src="@drawable/video_enlarge" />
        </LinearLayout>


        <!--视屏底部进度条-->
        <ProgressBar
            android:id="@+id/bottom_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:max="100"
            android:progressDrawable="@drawable/video_progress" />

        <ImageView
            android:id="@+id/back_tiny"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/video_title_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/video_back" />


        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/layout_right"
            android:layout_alignParentStart="true"
            android:layout_above="@id/layout_bottom"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <moe.codeest.enviews.ENDownloadView
            android:id="@+id/loading"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" />


        <ImageView
            android:id="@+id/small_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/video_small_close"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lock_screen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/unlock" />
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:textSize="@dimen/mid_icon_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/icon_rotate"
            android:id="@+id/videoRotateIcon"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/layout_bottom"

            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:textSize="@dimen/mid_icon_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/icon_text_select_note"
            android:visibility="invisible"
            android:id="@+id/videoNoteIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/videoRotateIcon"
            android:id="@+id/layout_right"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/videoShareTV"
                android:text="分享"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"                >
            </TextView>
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/mid_icon_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/icon_share"
                android:id="@+id/videoShareIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/videoShareTV"
                >
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/videoMarkTV"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/videoShareIcon">
            </TextView>
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/mid_icon_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/mark"
                android:id="@+id/videoMarkIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/videoMarkTV"
                >
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/videoUnLikeTV"
                android:text="不喜欢"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/videoMarkIcon">
            </TextView>
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/mid_icon_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/unlike"
                android:id="@+id/videoUnLikeIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/videoUnLikeTV"
                >
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/videoCommentTV"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/videoUnLikeIcon">
            </TextView>
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/mid_icon_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/comment_fill"
                android:id="@+id/videoCommentIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/videoCommentTV"
                >
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/videoLikeTV"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/videoCommentIcon">
            </TextView>
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/mid_icon_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/like_fill"
                android:id="@+id/videoLikeIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/videoLikeTV"
                >
            </org.jxxy.debug.corekit.widget.IconFont>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/videoAuthorImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@id/title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/imageview_head">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoAuthorTextView"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:gravity="left|center_vertical"
            android:layout_toStartOf="@id/layout_right"
            android:layout_marginEnd="12dp"
            android:layout_alignTop="@id/videoAuthorImageView"
            android:layout_alignBottom="@id/videoAuthorImageView"
            android:layout_toEndOf="@id/videoAuthorImageView">
        </TextView>
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:round_as_circle="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/bule"
            android:id="@+id/videoLabelRCL"
            android:paddingTop="2dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentStart="true"
            android:layout_above="@id/videoAuthorImageView"
            >
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label"
                android:textSize="10dp"
                android:id="@+id/labelIcon"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoTableTextView"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/labelIcon"
                >
            </TextView>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    </RelativeLayout>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:round_corner_top="20dp"
        android:background="@color/white"
        android:paddingTop="20dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:id="@+id/videoBottomSheet">
        <org.jxxy.debug.corekit.widget.CommonToolbar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/normal_text_size"
            app:if_back="true"
            android:id="@+id/videoCommentNumCommonToolbar"
            >
        </org.jxxy.debug.corekit.widget.CommonToolbar>
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/videoCommentViewPager2"
            app:layout_constraintTop_toBottomOf="@id/videoCommentNumCommonToolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </androidx.viewpager2.widget.ViewPager2>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
