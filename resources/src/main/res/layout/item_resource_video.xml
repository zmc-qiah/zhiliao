<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:round_corner_top="12dp"
    >

    <ImageView
        android:id="@+id/video_photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/video_title"
        android:text="@string/title"
        android:textSize="18sp"
        android:gravity="center"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/video_photo"
        >
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/video_line"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        >
    </View>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/purple_200"
        android:id="@+id/author"
        app:round_as_circle="true"
        app:layout_constraintTop_toBottomOf="@id/video_line">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/author_photo"
            >
        </ImageView>
        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="米立龙"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/author_photo"
            app:layout_constraintStart_toEndOf="@+id/author_photo"
            app:layout_constraintTop_toTopOf="@+id/author_photo"
            android:layout_marginRight="14dp"/>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:lines="1"
        android:text="2023/7/5"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/author"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/icon_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/category_scan"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/read_number"/>

    <TextView
        android:id="@+id/read_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:text="2000"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/icon_like"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/icon_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/category_like"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/like_number"/>

    <TextView
        android:id="@+id/like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/white_gradient_gray"
        app:layout_constraintBottom_toBottomOf="@id/video_photo"></View>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/video_photo"
        android:gravity="center"
        android:text="视频"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/round_purple">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:30"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_marginRight="8dp"
        android:id="@+id/video_duration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/video_photo"
        >
    </TextView>


</org.jxxy.debug.corekit.widget.RoundConstraintLayout>