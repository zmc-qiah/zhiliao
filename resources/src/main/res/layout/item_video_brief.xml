<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/authorImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/primary_100"
        android:id="@+id/authorTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/authorImageView"
        app:layout_constraintBottom_toBottomOf="@id/authorImageView"
        app:layout_constraintLeft_toRightOf="@id/authorImageView">
    </TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/authorImageView"
        android:id="@+id/videoTitleTextView"
        android:layout_margin = "12dp"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readTV"
        android:textSize="@dimen/small_text_size"
        android:layout_marginLeft="4dp"
        android:textColor="@color/grey_dark"
        app:layout_constraintTop_toTopOf="@id/readIcon"
        app:layout_constraintBottom_toBottomOf="@id/readIcon"
        app:layout_constraintLeft_toRightOf="@id/readIcon"
        >
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_read_new"
        android:textColor="@color/grey_dark"
        app:layout_constraintTop_toBottomOf="@id/videoTitleTextView"
        android:textSize="@dimen/small_icon_size"
        android:id="@+id/readIcon"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/videoTitleTextView"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentTV"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/grey_dark"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@id/commentIcon"
        app:layout_constraintBottom_toBottomOf="@id/commentIcon"
        app:layout_constraintLeft_toRightOf="@id/commentIcon"
        >
    </TextView>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/commentIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/comment"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/small_icon_size"
        app:layout_constraintLeft_toRightOf="@id/readTV"
        app:layout_constraintTop_toTopOf="@id/readIcon"
        app:layout_constraintBottom_toBottomOf="@id/readIcon">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createDateTV"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/grey_dark"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/commentIcon"
        app:layout_constraintBottom_toBottomOf="@id/commentIcon"
        app:layout_constraintLeft_toRightOf="@id/commentTV">

    </TextView>

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/labelRCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/primary_200"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentIcon"
        app:round_as_circle="true">

        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/labelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textColor="@color/white"
            android:textSize="@dimen/small_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </org.jxxy.debug.corekit.widget.IconFont>

        <TextView
            android:id="@+id/lableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:gravity="center"
            android:text="专业知识"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/labelIcon"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/labelRCL"
        app:layout_constraintBottom_toBottomOf="@id/labelRCL"
        android:layout_marginStart="4dp"
        android:id="@+id/idTv"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/dark_grey"/>
</androidx.constraintlayout.widget.ConstraintLayout>