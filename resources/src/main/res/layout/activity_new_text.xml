<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="35dp"
    >
   <org.jxxy.debug.common.widget.ViewPager2Container
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.viewpager2.widget.ViewPager2
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/viewPage"
           android:orientation="vertical"
           app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
       </androidx.viewpager2.widget.ViewPager2>
   </org.jxxy.debug.common.widget.ViewPager2Container>
    <org.jxxy.debug.common.widget.MyFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/viewPage"
        android:id="@+id/imgFloating"
        android:src="@drawable/img"
        android:backgroundTint="@color/blue"
        app:layout_anchorGravity="end|bottom"
        android:layout_margin="20dp">
    </org.jxxy.debug.common.widget.MyFloatingActionButton>

<!--    <org.jxxy.debug.common.widget.MyFloatingActionButton-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_anchor="@id/viewPage"-->
<!--        android:id="@+id/commentFloating"-->
<!--        android:src="@drawable/comment"-->
<!--        android:backgroundTint="@color/blue"-->
<!--        app:layout_anchorGravity="end|bottom"-->
<!--        android:layout_marginBottom="80dp"-->
<!--        android:layout_marginEnd="20dp">-->
<!--    </org.jxxy.debug.common.widget.MyFloatingActionButton>-->
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:id="@+id/bottomSheet"
        android:background="@color/black"
        app:round_corner_top="20dp"
        android:paddingTop="12dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/imagesViewPage"
            app:layout_constraintTop_toBottomOf="@id/imagesTabLayout"
            app:layout_constraintBottom_toBottomOf="parent">
        </androidx.viewpager2.widget.ViewPager2>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintWidth_percent="0.15"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/black"
            android:id="@+id/imagesTabLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent" >
        </com.google.android.material.tabs.TabLayout>

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>