<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/commenterImageView">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commenterTextView"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/commenterImageView"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="@id/commenterImageView">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/grey_dark"
        android:id="@+id/createDateTV"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="@id/commenterTextView"
        app:layout_constraintTop_toBottomOf="@id/commenterTextView"
        app:layout_constraintBottom_toBottomOf="@id/commenterImageView">
    </TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:textSize="@dimen/mid_text_size"
        android:id="@+id/commentTextView"
        app:layout_constraintBottom_toTopOf="@id/commentImageView"
        app:layout_constraintTop_toBottomOf="@id/createDateTV"
        app:layout_constraintRight_toLeftOf="@id/likeIcon"
        app:layout_constraintLeft_toLeftOf="@id/createDateTV">
    </TextView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/round_img"
        app:layout_constraintTop_toBottomOf="@id/commentTextView"
        app:layout_constraintLeft_toLeftOf="@id/commentTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:id="@+id/commentImageView">
    </ImageView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like_icon"
        android:id="@+id/likeIcon"
        android:textSize="@dimen/small_icon_size"
        android:textColor="@color/grey_dark"
        android:layout_margin="12dp"
        app:layout_constraintLeft_toRightOf="@id/commentTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/commenterImageView">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/small_text_size"
        android:id="@+id/likeTextView"
        app:layout_constraintTop_toBottomOf="@id/likeIcon"
        app:layout_constraintLeft_toLeftOf="@id/likeIcon"
        app:layout_constraintRight_toRightOf="@id/likeIcon">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>