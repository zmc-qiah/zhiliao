<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.common.widget.read.view.PaperLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/round_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tileTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/primary_100"
            android:id="@+id/authorTextView"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/authorImageView"
            app:layout_constraintBottom_toBottomOf="@id/authorImageView"
            app:layout_constraintRight_toLeftOf="@id/authorImageView">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tileTextView"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/Big_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left"
            app:layout_constraintTop_toTopOf="parent"
            >
        </TextView>
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/labelRCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bule"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/authorImageView"
            app:layout_constraintBottom_toBottomOf="@id/authorImageView"
            app:round_as_circle="true">
            <org.jxxy.debug.corekit.widget.IconFont
                android:id="@+id/labelIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label"
                android:textColor="@color/white"
                android:textSize="@dimen/small_icon_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/lableTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </org.jxxy.debug.corekit.widget.IconFont>
            <TextView
                android:id="@+id/lableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/labelIcon"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idTv"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/small_text_size"
            android:layout_marginStart="6dp"
            app:layout_constraintEnd_toStartOf="@id/labelRCL"
            app:layout_constraintBottom_toBottomOf="@id/labelRCL"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createDateTextView"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintTop_toBottomOf="@id/authorImageView"
            app:layout_constraintBottom_toBottomOf="@id/readIcon"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_icon_size"
            android:id="@+id/shareIcon"
            android:textColor="@color/grey_dark"
            android:text="@string/icon_share_new"
            android:gravity="center"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/authorImageView"
            app:layout_constraintRight_toRightOf="parent"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_icon_size"
            android:id="@+id/markIcon"
            android:textColor="@color/grey_dark"
            android:text="@string/icon_mark_Hollow"
            android:gravity="center"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/authorImageView"
            app:layout_constraintRight_toLeftOf="@id/shareIcon"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeTextView"
            android:textSize="11sp"
            android:textColor="@color/grey_dark"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="@id/markIcon"
            app:layout_constraintBottom_toBottomOf="@id/markIcon"
            app:layout_constraintRight_toLeftOf="@id/markIcon">
        </TextView>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_icon_size"
            android:id="@+id/likeIcon"
            android:textColor="@color/grey_dark"
            android:text="@string/like_icon"
            android:gravity="center"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/authorImageView"
            app:layout_constraintRight_toLeftOf="@id/likeTextView"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readTextView"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/grey_dark"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="@id/markIcon"
            app:layout_constraintBottom_toBottomOf="@id/markIcon"
            app:layout_constraintRight_toLeftOf="@id/likeIcon">
        </TextView>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_icon_size"
            android:id="@+id/readIcon"
            android:textColor="@color/grey_dark"
            android:text="@string/icon_read_new"
            android:gravity="center"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/authorImageView"
            app:layout_constraintRight_toLeftOf="@id/readTextView"
            >
        </org.jxxy.debug.corekit.widget.IconFont>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_200"
            android:layout_marginTop="4dp"
            android:id="@+id/lineView"
            app:layout_constraintTop_toBottomOf="@id/readIcon"
            app:layout_constraintBottom_toTopOf="@id/textView">
        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:id="@+id/textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineView"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</org.jxxy.debug.common.widget.read.view.PaperLayout>