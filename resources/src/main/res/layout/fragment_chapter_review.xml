<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="12dp"
            android:id="@+id/reviewRV"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editRC"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">
        </androidx.recyclerview.widget.RecyclerView>
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:id="@+id/editRC"
            android:layout_margin="24dp"
            app:round_as_circle="true"
            android:background="@color/chapter_review_bg"
            app:layout_constraintRight_toLeftOf="@id/submitButton"
            app:layout_constraintTop_toBottomOf="@id/reviewRV"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/mid_icon_size"
                android:id="@+id/editIcon"
                android:textColor="@color/white"
                android:text="@string/icon_text_select_note"
                android:layout_margin="12dp">
            </org.jxxy.debug.corekit.widget.IconFont>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/mid_text_size"
                android:hint="写想法"
                android:textColorHint="@color/white"
                android:ellipsize="end"
                android:maxLines="3"
                android:imeOptions="actionDone"
                android:layout_margin="4dp"
                android:id="@+id/editText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editIcon"
                app:layout_constraintEnd_toEndOf="parent">
            </EditText>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/submitButton"
            android:textSize="@dimen/mid_icon_size"
            android:background="@drawable/round_chapter_review_bg"
            android:gravity="center"
            android:text="@string/icon_send"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/editRC"
            app:layout_constraintBottom_toBottomOf="@id/editRC"
            app:layout_constraintStart_toEndOf="@id/editRC"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp"
            >
        </org.jxxy.debug.corekit.widget.IconFont>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
