    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_anchor="@id/viewPage"
        app:layout_anchorGravity="top"
        android:layout_marginTop="35dp"
        android:elevation="9dp"
        android:background="@color/white"
        >
        <com.google.android.material.tabs.TabLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:tabIndicatorFullWidth="false"
            app:tabTextColor="@color/grey"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/bule"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent"
            app:tabIndicatorColor="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:id="@+id/tabLayout">
        </com.google.android.material.tabs.TabLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.4"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_grey"
            android:id="@+id/view"
            app:layout_constraintLeft_toRightOf="@id/tabLayout">
        </View>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_send"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:id="@+id/sendIcon"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintRight_toRightOf="@id/view">
        </org.jxxy.debug.corekit.widget.IconFont>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/transparent"
            android:hint="点击发送弹幕"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="@id/view"
            app:layout_constraintRight_toLeftOf="@id/sendIcon"
            app:layout_constraintTop_toTopOf="parent"></EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPage"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >
    </androidx.viewpager2.widget.ViewPager2>


