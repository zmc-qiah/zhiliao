<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:round_corner="20dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.6"
        >
    </TextView>
    <ImageView
        android:id="@+id/text_image"
        android:layout_width="0dp"
        android:layout_height="85dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_title"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/text_line"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_image"
        >
    </View>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/purple_200"
        android:id="@+id/author"
        app:round_as_circle="true"
        app:layout_constraintTop_toBottomOf="@id/text_line">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/author_photo"
            >
        </ImageView>
        <TextView
            android:id="@+id/authorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="米立龙"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/author_photo"
            app:layout_constraintStart_toEndOf="@+id/author_photo"
            app:layout_constraintTop_toTopOf="@+id/author_photo"
            android:layout_marginRight="14dp"/>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:lines="1"
        android:text="2023/7/5"
        android:textSize="11sp"
       app:layout_constraintLeft_toRightOf="@id/author"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/icon_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/category_scan"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/read_number"/>

    <TextView
        android:id="@+id/read_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:text="2000"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/icon_like"/>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/icon_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/category_like"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        app:layout_constraintRight_toLeftOf="@id/like_number"/>

    <TextView
        android:id="@+id/like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        />



</org.jxxy.debug.corekit.widget.RoundConstraintLayout>