<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0">
    </View>
    <ImageView
        android:id="@+id/authorImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/authorTextView"
        app:layout_constraintTop_toTopOf="@id/authorImageView"
        app:layout_constraintBottom_toBottomOf="@id/authorImageView"
        app:layout_constraintLeft_toRightOf="@id/authorImageView">
    </TextView>
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:round_as_circle="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/bule"
        android:id="@+id/labelRCL"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/authorImageView"
        app:layout_constraintLeft_toLeftOf="parent">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textSize="12sp"
            android:id="@+id/labelIcon"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </org.jxxy.debug.corekit.widget.IconFont>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableTextView"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/labelIcon"
            >
        </TextView>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/authorImageView"
        android:id="@+id/videoTitleTextView"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin = "12dp"
        app:layout_constraintLeft_toRightOf="@id/labelRCL"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readTV"
        android:textSize="11sp"
        android:textColor="@color/light_grey"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@id/readIcon"
        app:layout_constraintBottom_toBottomOf="@id/readIcon"
        app:layout_constraintLeft_toRightOf="@id/readIcon"
        >
    </TextView>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read"
        android:textColor="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/videoTitleTextView"
        android:textSize="8dp"
        android:id="@+id/readIcon"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/labelRCL"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentTV"
        android:textSize="11sp"
        android:textColor="@color/light_grey"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@id/commentIcon"
        app:layout_constraintBottom_toBottomOf="@id/commentIcon"
        app:layout_constraintLeft_toRightOf="@id/commentIcon"
        >
    </TextView>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/commentIcon"
        android:layout_width="2dp"
        android:layout_height="8dp"
        android:layout_marginLeft="4dp"
        android:text="@string/comment"
        android:textColor="@color/light_grey"
        android:layout_marginTop="4dp"
        android:textSize="8dp"
        app:layout_constraintLeft_toRightOf="@id/readTV"
        app:layout_constraintTop_toBottomOf="@id/videoTitleTextView">
    </org.jxxy.debug.corekit.widget.IconFont>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createDateTV"
        android:textSize="11sp"
        android:textColor="@color/light_grey"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/commentIcon"
        app:layout_constraintBottom_toBottomOf="@id/commentIcon"
        app:layout_constraintLeft_toRightOf="@id/commentTV">

    </TextView>
    <cn.yonghui.hyd.main.ui.cms.activities.seckillactivities.widget.nested.NestedChildRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iconRecyclerView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/createDateTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:spanCount="4"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        >
    </cn.yonghui.hyd.main.ui.cms.activities.seckillactivities.widget.nested.NestedChildRecyclerView>
    <cn.yonghui.hyd.main.ui.cms.activities.seckillactivities.widget.nested.NestedChildRecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recycleView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       app:layout_constraintTop_toBottomOf="@id/iconRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </cn.yonghui.hyd.main.ui.cms.activities.seckillactivities.widget.nested.NestedChildRecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>