<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lectureImg"
        android:layout_width="match_parent"
        android:layout_height="155dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"

        android:text="讲座标题"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toStartOf="@+id/lectureImg"
        app:layout_constraintTop_toBottomOf="@+id/lectureImg" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="地点:"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@+id/titleTv"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <TextView
        android:id="@+id/placeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/place"
        app:layout_constraintStart_toEndOf="@+id/place" />

    <TextView
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/member_green"
        android:padding="5dp"
        android:text="人数:"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@+id/lectureImg"
        app:layout_constraintTop_toTopOf="@+id/lectureImg" />

    <TextView
        android:id="@+id/memberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/member_green"
        android:padding="5dp"
        android:text="测试"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/member"
        app:layout_constraintStart_toEndOf="@+id/member" />

    <View
        android:id="@+id/divider12"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/placeTv"
        app:layout_constraintStart_toEndOf="@+id/placeTv"
        app:layout_constraintTop_toTopOf="@+id/placeTv" />

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/iconFont5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="2dp"
        android:text="@string/society_distance"
        app:layout_constraintStart_toEndOf="@+id/divider12"
        app:layout_constraintTop_toTopOf="@+id/divider12" />

    <TextView
        android:id="@+id/distanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="13.7Km"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@+id/divider12"
        app:layout_constraintTop_toTopOf="@+id/divider12" />
</androidx.constraintlayout.widget.ConstraintLayout>