<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white"
    android:padding="5dp">

    <TextView
        android:id="@+id/rankTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rank"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listTv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rankTv"
        app:layout_constraintTop_toTopOf="@+id/rankTv" />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="测试"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@+id/listTv"
        app:layout_constraintTop_toBottomOf="@+id/listTv" />

    <TextView
        android:id="@+id/hotdataTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@+id/textTv"
        app:layout_constraintTop_toBottomOf="@+id/textTv" />

    <ImageView
        android:id="@+id/hotImg"
        android:layout_width="79dp"
        android:layout_height="81dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iconFont4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热度"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/hotdataTv"
        app:layout_constraintStart_toEndOf="@+id/hotdataTv"
        app:layout_constraintTop_toTopOf="@+id/hotdataTv" />

    <View
        android:id="@+id/divider6"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="@color/translucent_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotdataTv" />

</androidx.constraintlayout.widget.ConstraintLayout>