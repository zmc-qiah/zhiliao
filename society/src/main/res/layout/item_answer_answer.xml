<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white"
    android:padding="10dp">

    <TextView
        android:id="@+id/answerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回答内容"
        android:textSize="@dimen/normal_text_size"
        android:background="@drawable/background_discuss_answer"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/imageImg2222"
        app:layout_constraintTop_toBottomOf="@+id/imageImg2222" />

    <ImageView
        android:id="@+id/imageImg2222"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answernameTv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="用户名称"

        android:textColor="@color/IDpink"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@+id/imageImg2222"
        app:layout_constraintTop_toTopOf="@+id/imageImg2222" />


</androidx.constraintlayout.widget.ConstraintLayout>