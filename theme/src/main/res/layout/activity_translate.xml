<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/status_bar_height">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:id="@+id/toolConstraintLayout"
        app:layout_constraintTop_toTopOf="parent">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="12dp"
            android:id="@+id/backIcon"
            android:textColor="@color/black"
            android:textSize="@dimen/mid_icon_size"
            android:text="@string/icon_back"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
        <com.suke.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/switchButton">
        </com.suke.widget.SwitchButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchText"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"

            app:layout_constraintTop_toTopOf="@id/switchButton"
            app:layout_constraintBottom_toBottomOf="@id/switchButton"
            app:layout_constraintRight_toLeftOf="@id/switchButton">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_normal"
            app:layout_constraintBottom_toBottomOf="parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/Big_text_size"
            android:textColor="@color/black"
            android:id="@+id/tempTextView">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chatRV"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolConstraintLayout"
        app:layout_constraintBottom_toTopOf="@id/editConstraintLayout">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:id="@+id/editConstraintLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_normal"
            app:layout_constraintTop_toTopOf="parent">
        </View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_stroke_grey_solid_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="4dp"
            android:layout_margin="12dp"
            android:elevation="3dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="4dp"
                android:background="@color/transparent"
                android:maxLines="8"
                android:padding="6dp"
                android:textSize="@dimen/normal_text_size"
                android:hint="开始对话"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/submitIcon"
                app:layout_constraintTop_toTopOf="parent">
            </EditText>

            <org.jxxy.debug.corekit.widget.IconFont
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/mid_icon_size"
                android:layout_margin="6dp"
                android:text="@string/icon_back"
                android:id="@+id/submitIcon">
            </org.jxxy.debug.corekit.widget.IconFont>
            <com.debug.myapplication.widget.loading.LVCircularJump
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="6dp"
                android:visibility="gone"
                android:id="@+id/loadingAnimation">
            </com.debug.myapplication.widget.loading.LVCircularJump>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>