<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:round_corner="20dp"
        android:id="@+id/tranRCL"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_stroke_black_solid_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rootET"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/aIV"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI翻译"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/titleTV"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aTV"
            android:layout_marginTop="12dp"
            android:text="请输入翻译的文本:"
            android:textStyle="normal"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTV"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:minHeight="100dp"
            android:background="@drawable/round_dark_bg_200"
            android:hint="请输入"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="32dp"
            android:gravity="left|top"
            android:textSize="@dimen/mid_text_size"
            android:id="@+id/translateET"
            app:layout_constraintTop_toBottomOf="@id/aTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </EditText>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_100"
            android:layout_margin="12dp"
            android:id="@+id/pictureIcon"
            android:textSize="@dimen/mid_icon_size"
            app:layout_constraintTop_toTopOf="@id/translateET"
            app:layout_constraintEnd_toEndOf="@id/translateET"
            android:text="@string/note_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_100"
            android:id="@+id/photoTv"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintTop_toBottomOf="@id/pictureIcon"
            app:layout_constraintEnd_toEndOf="@id/pictureIcon"
            app:layout_constraintStart_toStartOf="@id/pictureIcon"
            android:text="拍照\n分析"/>
        <com.debug.myapplication.widget.loading.LVCircularJump
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="6dp"
            app:layout_constraintTop_toBottomOf="@id/translateET"
            android:id="@+id/loadingAnimation">
        </com.debug.myapplication.widget.loading.LVCircularJump>
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="翻译"
            android:id="@+id/submitButton"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/translateET"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/primary_200"
            android:background="@drawable/round_p_200">
        </Button>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo_1"
            android:id="@+id/logoIV"
            app:layout_constraintTop_toBottomOf="@id/translateET"
            app:layout_constraintBottom_toTopOf="@id/translateTV"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/stateIV"
            android:textSize="@dimen/mid_text_size"
            android:layout_marginStart="6dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/logoIV"
            app:layout_constraintBottom_toBottomOf="@id/logoIV"
            app:layout_constraintStart_toEndOf="@id/logoIV"
            app:layout_constraintEnd_toStartOf="@id/submitButton"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/translateTV"
            android:gravity="left|top"
            android:hint="预览"
            android:minHeight="60dp"
            android:paddingBottom="6dp"
            android:paddingRight="60dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textSize="@dimen/normal_text_size"
            android:padding="6dp"
            android:background="@drawable/round_dark_bg_200"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/submitButton">
        </EditText>
        <com.debug.myapplication.widget.loading.LVCircularJump
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="@id/translateTV"
            app:layout_constraintRight_toRightOf="@id/translateTV"
            android:id="@+id/lvc">
        </com.debug.myapplication.widget.loading.LVCircularJump>
        <Button
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="分析"
            android:id="@+id/but"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="@id/translateTV"
            app:layout_constraintRight_toRightOf="@id/translateTV"
            android:backgroundTint="@color/primary_200"
            android:background="@drawable/round_p_200">
        </Button>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="@string/icon_cancel"
        android:background="@drawable/round_tran"
        android:textColor="@color/primary_100"
        android:textSize="@dimen/big_icon_size"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:id="@+id/backIcon"
        app:layout_constraintTop_toBottomOf="@id/tranRCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
</androidx.constraintlayout.widget.ConstraintLayout>

