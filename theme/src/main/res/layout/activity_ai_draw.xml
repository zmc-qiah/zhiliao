<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingTop="@dimen/status_bar_height">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/aiDrawToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/aiDrawBackgroundIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/aiDrawToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/aiDrawToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary_200"
        app:titleText="AI绘画"
        app:dark_theme="true"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/aiDrawIv"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/imageview_ai_draw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aiDrawToolbar"/>

    <EditText
        android:id="@+id/aiDrawEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="请输入对于画面的描述"
        app:layout_constraintLeft_toLeftOf="@id/aiDrawIv"
        app:layout_constraintRight_toRightOf="@+id/aiDrawIv"
        app:layout_constraintTop_toBottomOf="@+id/aiDrawIv"
        />

    <TextView
        android:id="@+id/aiDrawBtn"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="确认"
        android:textColor="@color/white"
        android:letterSpacing="0.3"
        android:gravity="center"
        android:background="@drawable/button_ai_draw"
        app:layout_constraintTop_toBottomOf="@+id/aiDrawEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.debug.myapplication.widget.loading.LVCircularJump
        android:id="@+id/aiDrawProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/aiDrawIv"
        app:layout_constraintRight_toRightOf="@id/aiDrawIv"
        app:layout_constraintTop_toTopOf="@id/aiDrawIv"
        app:layout_constraintBottom_toBottomOf="@id/aiDrawIv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/aiDrawVp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>