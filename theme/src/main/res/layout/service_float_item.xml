<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layoutDescription="@xml/screen_float_ball"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:background="@drawable/round_white"
        android:id="@+id/centerBall">
        <ImageView
            android:id="@+id/aIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/logo_1"
            android:gravity="center"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
        </ImageView>
        <org.jxxy.debug.theme.voice.MultiWaveHeader
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:id="@+id/waveView"
            app:mwhWaves="MultiWave"
            app:mwhVelocity="1"
            android:scaleY="-1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:mwhCloseColor="@color/primary_200"
            app:mwhStartColor="@color/primary_300"
            app:mwhColorAlpha="0.8"
            android:layout_gravity="bottom"
            app:mwhIsRunning="true"
            app:mwhWaveHeight="15dp"
            />
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:padding="2dp"
        android:background="@drawable/round_white"
        android:id="@+id/summaryBall">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="17dp"
            android:text="&#xe64d;"
            android:gravity="center"
            android:background="@drawable/round_white"
            android:textColor="@color/black"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:background="@drawable/b"
        android:id="@+id/noteBall">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:textSize="15dp"
            android:text="@string/icon_text_select_note"
            android:gravity="center"
            android:textColor="#2B0000"
            >
        </org.jxxy.debug.corekit.widget.IconFont>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:background="@drawable/b"
        android:id="@+id/translateBall">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="15dp"
            android:text="@string/icon_translate"
            android:gravity="center"
            android:textColor="@color/black"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:background="@drawable/b"
        android:id="@+id/studyBall">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="17dp"
            android:text="&#xe65a;"
            android:gravity="center"
            android:textColor="@color/black"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:round_as_circle="true"
        android:background="@drawable/b"
        android:id="@+id/EQBall">
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="15dp"
            android:text="@string/icon_ball_chat"
            android:gravity="center"
            android:textColor="@color/black"
            >
        </org.jxxy.debug.corekit.widget.IconFont>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:id="@+id/viewTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/summaryBall">
    </View>
    <View
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:id="@+id/viewLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/studyBall">
    </View>

</androidx.constraintlayout.motion.widget.MotionLayout>
