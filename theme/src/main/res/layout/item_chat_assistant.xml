<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="6dp">

    <TextView
        android:layout_marginRight="10dp"
        android:paddingVertical="15dp"
        android:id="@+id/assistantTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_100"
        android:background="@drawable/round_aichat_grey"
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintLeft_toRightOf="@id/assistantIV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/assistantIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@id/assistantTV">

    </ImageView>

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/againIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_again"
        android:textColor="@color/dark_grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/againTextView"
        app:layout_constraintStart_toEndOf="@+id/againTextView"
        app:layout_constraintTop_toBottomOf="@+id/assistantIV">

    </org.jxxy.debug.corekit.widget.IconFont>

    <TextView
        android:id="@+id/againTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="重新生成"
        android:textColor="@color/dark_grey"
        android:textSize="10sp"

        app:layout_constraintStart_toStartOf="@+id/assistantIV"
        app:layout_constraintTop_toBottomOf="@+id/assistantIV">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>