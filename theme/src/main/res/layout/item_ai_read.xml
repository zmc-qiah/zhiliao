<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_100"
    android:paddingBottom="5dp"
    app:round_corner="5dp">

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/checkBtn"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintRight_toRightOf="@+id/nameTv"
        app:layout_constraintLeft_toLeftOf="@id/nameTv"
        app:layout_constraintTop_toBottomOf="@id/nameTv"/>

    <TextView
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去百科"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:background="@drawable/button_read"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintTop_toTopOf="@id/nameTv"
        app:layout_constraintBottom_toBottomOf="@+id/scoreTv"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent" />


</org.jxxy.debug.corekit.widget.RoundConstraintLayout>