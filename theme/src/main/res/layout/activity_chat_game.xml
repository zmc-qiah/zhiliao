<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_100"
    app:dark_theme="true"
    android:paddingTop="@dimen/toolbar_height">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/chatGameToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="猜人游戏" />

    <ImageView
        android:id="@+id/chatGameBackGroundIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chatGameToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

<!--    <org.jxxy.debug.corekit.widget.IconFont-->
<!--        android:id="@+id/ruleShowIcon"-->
<!--        android:layout_width="25dp"-->
<!--        android:layout_height="25dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:text="&#xe633;"-->
<!--        android:textColor="@color/primary_200"-->
<!--        app:layout_constraintTop_toBottomOf="@id/chatGameToolbar"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        android:textSize="@dimen/mid_icon_size"/>-->

    <TextView
        android:id="@+id/chatGameAiTv"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/Big_text_size"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/textview_chat_game"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatGameAiIv" />

    <ImageView
        android:id="@+id/chatGameAiIv"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/chatGameToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/chatGameYesInTv"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_chat_game_out"
        app:layout_constraintTop_toTopOf="@id/chatGameYesTv"
        app:layout_constraintLeft_toLeftOf="@id/chatGameYesTv"/>

    <TextView
        android:id="@+id/chatGameYesTv"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_chat_game_in"
        android:gravity="center"
        android:text="是"
        android:textColor="#b35a2e"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chatGameNoTv"
        app:layout_constraintTop_toBottomOf="@id/chatGameAiTv" />

    <View
        android:id="@+id/chatGameNoInTv"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_chat_game_out"
        app:layout_constraintTop_toTopOf="@id/chatGameNoTv"
        app:layout_constraintLeft_toLeftOf="@id/chatGameNoTv"/>

    <TextView
        android:id="@+id/chatGameNoTv"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="否"
        android:textColor="#b35a2e"
        android:textSize="@dimen/normal_text_size"
        android:background="@drawable/button_chat_game_in"
        app:layout_constraintLeft_toRightOf="@id/chatGameYesTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatGameYesTv" />

    <com.debug.myapplication.widget.loading.LVCircularJump
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/chatGameAiTv"
        app:layout_constraintRight_toRightOf="@+id/chatGameAiTv"
        app:layout_constraintTop_toTopOf="@id/chatGameAiTv"
        app:layout_constraintBottom_toBottomOf="@id/chatGameAiTv"/>

</androidx.constraintlayout.widget.ConstraintLayout>