<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_height">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_200"
        app:layout_constraintTop_toBottomOf="@id/aiKnowledgeToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/aiKnowledgeToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/bg_100"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="Ai知识库" />

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/bg_200"-->
<!--        app:layout_constraintTop_toBottomOf="@id/aiKnowledgeToolbar"/>-->

    <ImageView
        android:id="@+id/aiKnowledgeBackgroundIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aiKnowledgeToolbar" />

    <org.jxxy.debug.theme.WaveView
        android:id="@+id/testWaveView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/aiKnowledgeBottomRl"
        app:layout_constraintTop_toBottomOf="@id/aiKnowledgeToolbar" />

    <TextView
        android:id="@+id/aiKnowledgeAddTv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/testWaveView"
        app:layout_constraintLeft_toRightOf="@id/testWaveView"
        app:layout_constraintTop_toTopOf="@id/testWaveView" />

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/aiKnowledgeBottomRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg_100"
        android:paddingTop="30dp"
        android:minHeight="450dp"
        android:maxHeight="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:round_corner_top="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/aiKnowledgeRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_ai_knowledge"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/aiKnowledgeEt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <ImageView
            android:id="@+id/noneIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="@id/aiKnowledgeRv"
            app:layout_constraintRight_toRightOf="@id/aiKnowledgeRv"
            app:layout_constraintTop_toTopOf="@id/aiKnowledgeRv"
            app:layout_constraintBottom_toBottomOf="@id/aiKnowledgeRv"/>

        <TextView
            android:id="@+id/noneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#c0000000"
            android:text="暂无对话记录"
            app:layout_constraintTop_toBottomOf="@id/noneIv"
            app:layout_constraintLeft_toLeftOf="@id/noneIv"
            app:layout_constraintRight_toRightOf="@id/noneIv"/>

        <EditText
            android:id="@+id/aiKnowledgeEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_ai_knowledge"
            android:gravity="start"
            android:hint="@string/ai_knowledge_type1"
            android:imeOptions="actionDone"
            android:maxHeight="100dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@id/aiKnowledgeRl"
            app:layout_constraintLeft_toLeftOf="@id/aiKnowledgeRv"
            app:layout_constraintRight_toRightOf="@id/aiKnowledgeRv"
            app:layout_constraintWidth_percent="0.8" />

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/aiKnowledgeRl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_ai_draw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/aiKnowledgeRv"
            app:layout_constraintRight_toRightOf="@id/aiKnowledgeRv"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/aiKnowledgeIv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/aiKnowledgeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="写入"
                android:textColor="@color/white"
                android:textSize="@dimen/Big_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/aiKnowledgeIv"
                app:layout_constraintTop_toTopOf="parent" />

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/typeTurn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="&#x10132;"
            android:textSize="@dimen/mid_icon_size"
            app:layout_constraintBottom_toBottomOf="@id/aiKnowledgeRl"
            app:layout_constraintLeft_toRightOf="@id/aiKnowledgeRl"
            app:layout_constraintRight_toRightOf="@id/aiKnowledgeRv"
            app:layout_constraintTop_toTopOf="@id/aiKnowledgeRl" />

        <TextView
            android:id="@+id/typeTurnTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="切换"
            app:layout_constraintBottom_toBottomOf="@+id/typeTurn"
            app:layout_constraintLeft_toRightOf="@id/typeTurn"
            app:layout_constraintTop_toTopOf="@id/typeTurn" />

        <org.jxxy.debug.corekit.widget.IconFont
            android:id="@+id/chooseIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="&#xe6f4;"
            android:gravity="center"
            android:layout_marginLeft="-10dp"
            android:textSize="@dimen/mid_icon_size"
            app:layout_constraintBottom_toBottomOf="@id/aiKnowledgeRl"
            app:layout_constraintLeft_toLeftOf="@id/aiKnowledgeEt"
            app:layout_constraintTop_toTopOf="@id/aiKnowledgeRl" />

        <TextView
            android:id="@+id/chooseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件"
            app:layout_constraintBottom_toBottomOf="@+id/chooseIcon"
            app:layout_constraintLeft_toRightOf="@id/chooseIcon"
            app:layout_constraintTop_toTopOf="@id/chooseIcon" />

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>