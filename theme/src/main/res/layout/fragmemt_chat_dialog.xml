<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_200"
    android:paddingTop="@dimen/status_bar_height">
    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/chatGameToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="ai问答"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chatRV"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@color/bg_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatGameToolbar"
        app:layout_constraintBottom_toTopOf="@id/editConstraintLayout">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/bg_200"
        android:id="@+id/editConstraintLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_normal"
            app:layout_constraintTop_toTopOf="parent">
        </View>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/round_stroke_grey_solid_white"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:paddingTop="8dp"
         android:layout_margin="12dp"
         android:elevation="3dp">

         <EditText
             android:id="@+id/editText"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="6dp"
             android:layout_marginRight="6dp"
             android:layout_marginBottom="4dp"
             android:background="@color/transparent"
             android:maxLines="8"
             android:padding="6dp"
             android:textSize="@dimen/normal_text_size"
             android:hint="开始对话"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toLeftOf="@id/submitIcon"
             app:layout_constraintTop_toTopOf="parent">
         </EditText>

         <org.jxxy.debug.corekit.widget.IconFont
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:gravity="center"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:textSize="@dimen/mid_icon_size"
             android:layout_margin="6dp"
             android:text="@string/icon_submit"
             android:id="@+id/submitIcon">
         </org.jxxy.debug.corekit.widget.IconFont>
         <com.debug.myapplication.widget.loading.LVCircularJump
             android:layout_width="35dp"
             android:layout_height="35dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_margin="6dp"
             android:visibility="gone"
             android:id="@+id/loadingAnimation">
         </com.debug.myapplication.widget.loading.LVCircularJump>
     </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>