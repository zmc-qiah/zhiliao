<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/aiAdvGameToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:dark_theme="true"
        app:titleText="冒险游戏"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/aiAdvGameIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/aiAdvGameToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiAdvGameRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_ai_adv_game"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/aiAdvGameToolbar"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.debug.myapplication.widget.loading.LVCircularJump
        android:id="@+id/aiAdvGameLoading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/aiAdvGameRv"
        app:layout_constraintRight_toRightOf="@id/aiAdvGameRv"
        app:layout_constraintTop_toTopOf="@id/aiAdvGameRv"
        app:layout_constraintBottom_toBottomOf="@id/aiAdvGameRv"/>

    <TextView
        android:id="@+id/aiAdvGameOptionATv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_ai_adv_game"
        android:text="A"
        android:textSize="@dimen/Big_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintLeft_toLeftOf="@id/aiAdvGameRv"
        app:layout_constraintRight_toLeftOf="@+id/aiAdvGameOptionBTv"
        app:layout_constraintTop_toBottomOf="@+id/aiAdvGameRv"/>

    <TextView
        android:id="@+id/aiAdvGameOptionBTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_ai_adv_game"
        android:text="B"
        android:textSize="@dimen/Big_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintRight_toRightOf="@id/aiAdvGameRv"
        app:layout_constraintLeft_toRightOf="@+id/aiAdvGameOptionATv"
        app:layout_constraintTop_toTopOf="@id/aiAdvGameOptionATv"/>

    <TextView
        android:id="@+id/aiAdvGameOptionCTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_ai_adv_game"
        android:text="C"
        android:textSize="@dimen/Big_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintLeft_toLeftOf="@id/aiAdvGameRv"
        app:layout_constraintRight_toLeftOf="@+id/aiAdvGameOptionDTv"
        app:layout_constraintTop_toBottomOf="@+id/aiAdvGameOptionATv" />

    <TextView
        android:id="@+id/aiAdvGameOptionDTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="D"
        android:textSize="@dimen/Big_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button_ai_adv_game"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintRight_toRightOf="@id/aiAdvGameRv"
        app:layout_constraintLeft_toRightOf="@+id/aiAdvGameOptionCTv"
        app:layout_constraintTop_toBottomOf="@+id/aiAdvGameOptionBTv"/>

    <TextView
        android:id="@+id/testTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>