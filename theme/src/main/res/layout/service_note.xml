<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:round_corner="20dp"
        android:id="@+id/noteRCL"
        android:background="@drawable/round_stroke_black_solid_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rootET"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/aIV"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI智能分析"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/titleTV"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aTV"
            android:layout_marginTop="12dp"
            android:text="请先输入要分析的文章:"
            android:textStyle="normal"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTV"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:minHeight="100dp"
            android:background="@drawable/round_dark_bg_200"
            android:hint="请输入"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="32dp"
            android:gravity="left|top"
            android:textSize="@dimen/mid_text_size"
            android:id="@+id/rootET"
            app:layout_constraintTop_toBottomOf="@id/aTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </EditText>
        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_100"
            android:layout_margin="12dp"
            android:id="@+id/pictureIcon"
            android:textSize="@dimen/mid_icon_size"
            app:layout_constraintTop_toTopOf="@id/rootET"
            app:layout_constraintEnd_toEndOf="@id/rootET"
            android:text="@string/note_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_100"
            android:id="@+id/photoTv"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintTop_toBottomOf="@id/pictureIcon"
            app:layout_constraintEnd_toEndOf="@id/pictureIcon"
            app:layout_constraintStart_toStartOf="@id/pictureIcon"
            android:text="拍照\n分析"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/childNodeTV"
            android:text="关键方向:"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="@id/rootET"
            app:layout_constraintTop_toBottomOf="@id/rootET">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/childNodeRV"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/childNodeTV"
            app:layout_constraintLeft_toRightOf="@id/childNodeTV"
            app:layout_constraintRight_toRightOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:hint="请输入"
            android:minHeight="35dp"
            android:id="@+id/childNodeET"
            android:background="@drawable/round_dark_bg_200"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintTop_toBottomOf="@id/childNodeRV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/addButton"
            app:layout_constraintBottom_toTopOf="@id/switchButton">
        </EditText>
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="翻译"
            android:id="@+id/addButton"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintTop_toBottomOf="@id/childNodeRV"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/primary_200"
            android:background="@drawable/round_p_200">
        </Button>
        <com.suke.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_checked_color="@color/primary_200"
            app:layout_constraintTop_toBottomOf="@id/addButton"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/submitButton"
            android:id="@+id/switchButton">
        </com.suke.widget.SwitchButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchText"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/primary_200"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/switchButton"
            app:layout_constraintBottom_toBottomOf="@id/switchButton"
            app:layout_constraintStart_toEndOf="@id/switchButton">
        </TextView>
        <com.debug.myapplication.widget.loading.LVCircularJump
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/loading"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/submitButton"
            app:layout_constraintEnd_toEndOf="@id/submitButton"
            app:layout_constraintBottom_toBottomOf="@id/submitButton"
            app:layout_constraintTop_toTopOf="@id/submitButton"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="翻译"
            android:id="@+id/submitButton"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchButton"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/primary_200"
            android:background="@drawable/round_p_200">
        </Button>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="1dp"
            android:src="@drawable/logo_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageView>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="@string/icon_cancel"
        android:background="@drawable/round_tran"
        android:textColor="@color/primary_100"
        android:textSize="@dimen/big_icon_size"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:id="@+id/backIcon"
        app:layout_constraintTop_toBottomOf="@id/noteRCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </org.jxxy.debug.corekit.widget.IconFont>
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>


