<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/transition"
        app:constraintSetStart="@id/startSet"
        app:constraintSetEnd="@id/endSet"
        app:duration="1000">
    </Transition>
    <ConstraintSet
        android:id="@+id/startSet">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchButton"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp">
        </Constraint>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/switchButton"
            android:id="@+id/switchText"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:id="@+id/bgView"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fillView"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/themeRv"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="parent"/>
        <Constraint
            android:id="@+id/dsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/endSet">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp">
        </Constraint>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/switchButton"
            app:layout_constraintEnd_toEndOf="@id/switchButton"
            android:id="@+id/switchText"
            app:layout_constraintTop_toBottomOf="@id/switchButton"
            android:layout_marginTop="2dp"
            />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:id="@+id/bgView"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fillView"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/themeRv"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/themeRv"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/dsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="@id/themeRv"
            />
    </ConstraintSet>
</MotionScene>