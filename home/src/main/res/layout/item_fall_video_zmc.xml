<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_fall"
    android:paddingHorizontal="3dp"
    android:paddingBottom="7dp"
    app:round_corner_top="6dp">

    <ImageView
        android:id="@+id/aIv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <org.jxxy.debug.corekit.widget.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/dark_grey"
        android:layout_margin="12dp"
        android:text="@string/icon_fall_video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/video_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/text_100"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:paddingHorizontal="2dp"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/aIv"
        app:layout_constraintTop_toBottomOf="@+id/aIv" />
    <TextView
        android:paddingLeft="2dp"
        android:id="@+id/video_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_200"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@+id/video_tv"
        app:layout_constraintTop_toBottomOf="@+id/video_tv" />
    <TextView
        android:paddingLeft="2dp"
        android:id="@+id/video_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/浅黑2"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/video_tv_2"
        app:layout_constraintTop_toBottomOf="@id/video_tv_2" />
    <TextView
        android:id="@+id/video_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/浅黑2"
        app:layout_constraintBottom_toBottomOf="@+id/video_tv_3"
        app:layout_constraintLeft_toRightOf="@+id/video_tv_3"
        app:layout_constraintTop_toTopOf="@+id/video_tv_3" />
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>