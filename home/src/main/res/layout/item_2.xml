<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    app:round_corner="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/con_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/con_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                android:id="@+id/con_3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/con_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text100"
                android:textSize="@dimen/Big_text_size"
                android:text="@string/content_1"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_2"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/content_2"
                android:layout_marginTop="5dp"
                android:textColor="@color/text200"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_1"
                app:layout_constraintBottom_toTopOf="@+id/view"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/搜索灰"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_2"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

            <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                android:id="@+id/con_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con_3">

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content_1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@color/text200"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                    android:id="@+id/con_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                        android:id="@+id/con_6"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/con_7"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:background="@color/灰"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

                    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                        android:id="@+id/con_7"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintLeft_toRightOf="@id/con_6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/con_8"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:background="@color/灰"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

                    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
                        android:id="@+id/con_8"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintLeft_toRightOf="@id/con_7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:background="@color/灰"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

                </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
            </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
</org.jxxy.debug.corekit.widget.RoundConstraintLayout>