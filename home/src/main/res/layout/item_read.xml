<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/灰"
            app:round_corner="5dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/read_iv_1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/灰"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/con"
            app:layout_constraintStart_toStartOf="@+id/con"
            app:layout_constraintTop_toBottomOf="@+id/con">

            <TextView
                android:id="@+id/read_tv_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="@string/read_1_1"
                android:textColor="@color/text_100"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />

            <View
                android:layout_marginVertical="4dp"
                android:id="@+id/read_v_1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider_blue" />

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/iv_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/read_1_2"
                android:textColor="@color/text200"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>