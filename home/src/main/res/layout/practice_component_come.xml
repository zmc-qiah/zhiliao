<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="100dp"
   >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/border"
      android:paddingBottom="20dp">
      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/Big_text_size"
          android:textStyle="bold"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="12dp"
          android:textColor="@color/primary100"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"/>

      <org.jxxy.debug.corekit.widget.RoundConstraintLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/title">

          <org.jxxy.debug.corekit.widget.RoundConstraintLayout
              android:id="@+id/rc_1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="20dp"
              android:layout_marginBottom="20dp"

              android:contentDescription="@string/fall"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/rc_2"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/come_tv"
              app:round_corner="7dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/灰"/>

              <ImageView

                  android:id="@+id/iv_1"
                  android:layout_width="match_parent"
                  android:layout_height="170dp"
                  android:scaleType="fitXY"
                  android:background="@color/灰"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>


          </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

          <TextView
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical|center_horizontal"
              android:text="@string/come_1"
              android:textColor="@color/primary_200"
              android:textSize="@dimen/title_text_size"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="@+id/rc_1"
              app:layout_constraintStart_toStartOf="@+id/rc_1"
              app:layout_constraintTop_toBottomOf="@+id/rc_1" />
          <org.jxxy.debug.corekit.widget.RoundConstraintLayout
              android:id="@+id/rc_2"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="20dp"
              android:layout_marginBottom="20dp"
              app:layout_constraintLeft_toRightOf="@+id/rc_1"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"

              app:round_corner="7dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/灰"/>

              <ImageView
                  android:id="@+id/iv_2"
                  android:layout_width="match_parent"
                  android:layout_height="170dp"
                  android:background="@color/灰"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>


          </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

          <TextView
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical|center_horizontal"
              android:text="@string/come_2"
              android:textColor="@color/primary_200"
              android:textSize="@dimen/title_text_size"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="@+id/rc_2"
              app:layout_constraintStart_toStartOf="@+id/rc_2"
              app:layout_constraintTop_toBottomOf="@+id/rc_2" />

          <View
              android:id="@+id/v"
              android:layout_width="match_parent"
              android:layout_height="6dp"
              app:layout_constraintTop_toBottomOf="@+id/come_tv"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"

              app:layout_constraintBottom_toBottomOf="parent"/>
      </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>