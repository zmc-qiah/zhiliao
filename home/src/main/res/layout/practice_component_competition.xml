    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/competition">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/imageliner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="top|center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- First LinearLayoutCompat -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/con_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
               >

                <ImageView
                    android:id="@+id/competition_1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/title_1"
                    android:textColor="@color/text_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/competition_1"
                    android:textSize="@dimen/title_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Second LinearLayoutCompat -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/con_2"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/competition_2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

                <TextView
                    android:textColor="@color/text_100"
                    android:id="@+id/title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/competition_1"
                    android:textSize="@dimen/title_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/containerliner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageliner">

            <!-- First LinearLayoutCompat -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/con_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/competition_3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:textColor="@color/text_100"
                    android:id="@+id/title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/competition_1"
                    android:textSize="@dimen/title_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Second LinearLayoutCompat -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/con_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/competition_4"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:textColor="@color/text_100"
                    android:id="@+id/title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/competition_1"
                    android:textSize="@dimen/title_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>