<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_corner="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <ImageView
            android:id="@+id/grid_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/透白"
                     />

                <TextView

                    android:id="@+id/grid_tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="@string/like_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/grid_1"
                    app:layout_constraintHorizontal_bias="0.466"
                    app:layout_constraintLeft_toLeftOf="parent"
                   />

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>