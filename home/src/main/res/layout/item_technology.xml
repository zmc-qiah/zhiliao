<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_technology"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/technology_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:round_corner="8dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/technology_name_1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/Big_text_size"
            android:textColor="@color/text100"
            android:layout_height="wrap_content"
            android:text="@string/hot_technology_1"
            app:layout_constraintBottom_toTopOf="@+id/con_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:round_corner="5dp"
            android:background="@color/浅蓝"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/con_4"
            app:layout_constraintTop_toBottomOf="@+id/technology_name_1"
            app:layout_constraintBottom_toTopOf="@+id/technology_context_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/book_1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical|center_horizontal"/>

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:round_corner="5dp"
            android:layout_marginTop="3dp"
            android:background="@color/浅蓝"
            app:layout_constraintLeft_toRightOf="@+id/con_3"
            app:layout_constraintTop_toBottomOf="@+id/technology_name_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/book_2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical|center_horizontal"/>

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"

            app:round_corner="5dp"
            android:background="@color/浅蓝"
            app:layout_constraintLeft_toRightOf="@+id/con_4"
            app:layout_constraintTop_toBottomOf="@+id/technology_name_1"
            app:layout_constraintBottom_toTopOf="@+id/technology_context_1">

           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/white"
                android:text="@string/book_2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical|center_horizontal"/>-->

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

        <TextView
            android:id="@+id/technology_context_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="3dp"
            android:textColor="@color/text200"
            android:letterSpacing="0.1"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@string/hot_technology_2"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/con_3"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>



</org.jxxy.debug.corekit.widget.RoundConstraintLayout>