<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/rc_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_corner="10dp">

        <org.jxxy.debug.corekit.widget.RoundConstraintLayout
            android:id="@+id/con"
            app:round_corner="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@color/ç°"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        </org.jxxy.debug.corekit.widget.RoundConstraintLayout>


        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/come_1"
            android:textColor="@color/bg100"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/con"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>