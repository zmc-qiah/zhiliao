<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardIconImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_goneMarginEnd="12dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/common_text_main_black"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/cardIconImg"
            app:layout_constraintEnd_toStartOf="@id/cardActionBtn"
            app:layout_constraintStart_toEndOf="@id/cardIconImg"
            app:layout_constraintTop_toTopOf="@id/cardIconImg"
            tools:text="恭喜您被神秘优惠券砸中恭喜您被神秘优惠券砸中恭喜您被神秘优惠券砸中恭喜您被神秘优惠券砸中恭喜您被神秘优惠券砸中" />

        <TextView
            android:id="@+id/cardContentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_text_sub_black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardActionBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardTitleTv"
            app:layout_goneMarginEnd="12dp"
            tools:text="满100减5元，18小时后失效18小时后失18失" />

        <TextView
            android:id="@+id/cardActionBtn"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/common_text_main_black"
            android:text="去使用"
            android:background="@drawable/button_background"
            android:textSize="@dimen/small_text_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>