<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:round_corner="8dp"
    android:background="@color/bg_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/achievementRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:round_corner="4dp"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/achievementSmallIv"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:background="@color/bg_200"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/achievementSmallTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        android:background="@color/bg_200"
        app:layout_constraintTop_toBottomOf="@id/achievementSmallIv"/>

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>
    
    <TextView
        android:id="@+id/achievementItemContentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/achievementRl"/>

    <TextView
        android:id="@+id/achievementItemCheckTv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:letterSpacing="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/achievementItemChangeTv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/achievementItemChangeTv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="切换"
        android:textColor="@color/white"
        android:letterSpacing="0.2"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/achievementItemCheckTv"
        app:layout_constraintTop_toTopOf="@id/achievementItemCheckTv"/>

</org.jxxy.debug.corekit.widget.RoundConstraintLayout>