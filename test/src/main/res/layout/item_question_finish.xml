<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/finishCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/item_result_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    <TextView
        android:id="@+id/trueOptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正确答案:"
        android:textColor="#0A0A0A"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/chooseOptionTv"
        app:layout_constraintTop_toBottomOf="@+id/chooseOptionTv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/chooseOptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="你选择:"
        android:textColor="#0A0A0A"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/trueOptionTv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/nextQuestionBtn"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="下一题"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        android:background="@drawable/button_item_next"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finishCl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_analysis"
        android:text="解析"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_constraintBottom_toTopOf="@+id/analysisTv"
        app:layout_constraintLeft_toLeftOf="@+id/analysisTv"
        app:layout_constraintTop_toBottomOf="@+id/nextQuestionBtn"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/analysisTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="#0A0A0A"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextQuestionBtn"
       />


</androidx.constraintlayout.widget.ConstraintLayout>