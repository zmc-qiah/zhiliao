<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_answer"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/deleteTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/button_delete"
        android:gravity="center"
        android:text="删除"
        android:letterSpacing="0.2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkTv"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:id="@+id/checkTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/button_check"
        android:gravity="center"
        android:text="查看"
        android:letterSpacing="0.2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@+id/questionContentsTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintRight_toLeftOf="@+id/deleteTv"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:id="@+id/questionContentsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textColor="#0a0a0a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>