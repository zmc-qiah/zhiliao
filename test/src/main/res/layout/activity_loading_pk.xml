<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_height"
    android:background="@color/bg_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/pkToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="谁是学霸"
        app:layout_constraintTop_toTopOf="parent"/>
    <org.jxxy.debug.common.RippleView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </org.jxxy.debug.common.RippleView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/logoIv"
        android:background="@drawable/round_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </ImageView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/aIv"
        android:visibility="invisible"
        android:alpha="0"
        android:scaleY="0"
        android:scaleX="0"
        android:background="@drawable/round_white"
        android:padding="2dp"
        android:src="@color/black"
        app:layout_constraintCircleAngle="310"
        app:layout_constraintCircleRadius="80dp"
        app:layout_constraintCircle="@id/logoIv"/>
    <TextView
        android:id="@+id/loadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Big_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.debug.myapplication.widget.loading.LVCircularJump
        android:layout_width="@dimen/mid_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:layout_marginStart="3dp"
        android:id="@+id/loadingLVJ"
        app:layout_constraintBottom_toBottomOf="@id/loadingTv"
        app:layout_constraintStart_toEndOf="@id/loadingTv">
    </com.debug.myapplication.widget.loading.LVCircularJump>

</androidx.constraintlayout.widget.ConstraintLayout>