<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_100"
    android:paddingTop="@dimen/status_bar_height">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/specialToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:dark_theme="true"
        android:background="@color/bg_100"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="怪兽猎人"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/specialAnswerListRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_200"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/specialToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>