<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statisticsData"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/statistic_background"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/answerCountTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="通关时间"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.26"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/answerPercentTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintWidth_percent="0.24" />

        <TextView
            android:id="@+id/specialTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/num_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/answerCountTv"
            app:layout_constraintRight_toRightOf="@+id/answerCountTv"
            app:layout_constraintBottom_toTopOf="@id/answerCountTv"/>

        <TextView
            android:id="@+id/answerPercentTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="正确率"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/answerCountTv"
            app:layout_constraintHeight_percent="0.26"
            app:layout_constraintLeft_toRightOf="@+id/answerCountTv"
            app:layout_constraintRight_toLeftOf="@+id/answerDayTv"
            app:layout_constraintWidth_percent="0.24" />

        <TextView
            android:id="@+id/specialPercentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/num_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/answerPercentTv"
            app:layout_constraintRight_toRightOf="@id/answerPercentTv"
            app:layout_constraintBottom_toTopOf="@id/answerPercentTv"/>

        <TextView
            android:id="@+id/answerDayTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="造成伤害"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/answerCountTv"
            app:layout_constraintHeight_percent="0.26"
            app:layout_constraintLeft_toRightOf="@+id/answerPercentTv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.28" />

        <TextView
            android:id="@+id/specialDamageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0a0a"
            android:textSize="@dimen/num_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/answerDayTv"
            app:layout_constraintRight_toRightOf="@+id/answerDayTv"
            app:layout_constraintBottom_toTopOf="@+id/answerDayTv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>