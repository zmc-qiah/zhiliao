<?xml version="1.0" encoding="utf-8"?>
<org.jxxy.debug.corekit.widget.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:round_corner="8dp"
    android:background="@color/bg_100">

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/achievementRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:round_corner="5dp"
        android:background="@color/bg_200"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/achievementSmallIv"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/achievementSmallTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintTop_toBottomOf="@id/achievementSmallIv"/>

    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>

    <TextView
        android:id="@+id/achievementItemContentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/achievementRl"/>

    <TextView
        android:id="@+id/celebrateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="恭喜获得 ！！！"
        android:textSize="@dimen/Big_text_size"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/achievementItemContentTv"
        app:layout_constraintBottom_toTopOf="@id/achievementItemCheckTv"/>

    <TextView
        android:id="@+id/achievementItemCheckTv"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="确认"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</org.jxxy.debug.corekit.widget.RoundConstraintLayout>