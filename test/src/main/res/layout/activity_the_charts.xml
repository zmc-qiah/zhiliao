<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_100"
    android:paddingTop="@dimen/status_bar_height">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/theChartsToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/bg_100"
        app:dark_theme="true"
        app:titleText="排行榜"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.06"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_200"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintBottom_toTopOf="@id/theChartsContentCl">

        <ImageView
            android:id="@+id/theFirstIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="&#x1011f;"
            android:textColor="#C0FFD700"
            app:layout_constraintLeft_toLeftOf="@+id/theFirstIv"
            app:layout_constraintRight_toRightOf="@id/theFirstIv"
            app:layout_constraintBottom_toBottomOf="@+id/theFirstIv"/>

        <TextView
            android:id="@+id/theFirstNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="虚席以待"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintTop_toBottomOf="@id/theFirstIv"
            app:layout_constraintLeft_toLeftOf="@id/theFirstIv"
            app:layout_constraintRight_toRightOf="@id/theFirstIv"/>

        <TextView
            android:id="@+id/theFirstTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一名"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintLeft_toLeftOf="@id/theFirstIv"
            app:layout_constraintRight_toRightOf="@id/theFirstIv"
            app:layout_constraintTop_toBottomOf="@id/theFirstNameTv"/>

        <TextView
            android:id='@+id/theFirstDamageTv'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="造成..伤害"
            app:layout_constraintLeft_toLeftOf="@id/theFirstIv"
            app:layout_constraintRight_toRightOf="@id/theFirstIv"
            app:layout_constraintTop_toBottomOf="@id/theFirstTv"/>

        <ImageView
            android:id="@+id/theSecondIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/theFirstIv"
            app:layout_constraintBottom_toTopOf="@id/theSecondNameTv" />

        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="&#x1011f;"
            android:textColor="#C0C0C0C0"
            app:layout_constraintLeft_toLeftOf="@+id/theSecondIv"
            app:layout_constraintRight_toRightOf="@id/theSecondIv"
            app:layout_constraintBottom_toBottomOf="@+id/theSecondIv"/>

        <TextView
            android:id="@+id/theSecondNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="虚席以待"
            app:layout_constraintLeft_toLeftOf="@id/theSecondTv"
            app:layout_constraintRight_toRightOf="@id/theSecondTv"
            app:layout_constraintBottom_toTopOf="@id/theSecondTv"/>

        <TextView
            android:id="@+id/theSecondTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二名"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintLeft_toLeftOf="@id/theSecondIv"
            app:layout_constraintRight_toRightOf="@id/theSecondIv"
            app:layout_constraintBottom_toTopOf="@+id/theSecondDamageTv"/>

        <TextView
            android:id="@+id/theSecondDamageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="造成..伤害"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/theSecondIv"
            app:layout_constraintRight_toRightOf="@id/theSecondIv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/theThirdIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/theFirstIv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/theThirdNameTv"/>


        <org.jxxy.debug.corekit.widget.IconFont
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="&#x1011f;"
            android:textColor="#C0BA6E40"
            app:layout_constraintLeft_toLeftOf="@+id/theThirdIv"
            app:layout_constraintRight_toRightOf="@id/theThirdIv"
            app:layout_constraintBottom_toBottomOf="@+id/theThirdIv"/>

        <TextView
            android:id="@+id/theThirdNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="虚席以待"
            app:layout_constraintBottom_toTopOf="@id/theThirdTv"
            app:layout_constraintLeft_toLeftOf="@id/theThirdIv"
            app:layout_constraintRight_toRightOf="@id/theThirdIv"/>

        <TextView
            android:id="@+id/theThirdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三名"
            android:textSize="@dimen/Big_text_size"
            app:layout_constraintLeft_toLeftOf="@id/theThirdIv"
            app:layout_constraintRight_toRightOf="@id/theThirdIv"
            app:layout_constraintBottom_toTopOf="@id/theThirdDamageTv"/>

        <TextView
            android:id="@+id/theThirdDamageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="造成..伤害"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/theThirdIv"
            app:layout_constraintRight_toRightOf="@id/theThirdIv"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/theChartsContentCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintBottom_toTopOf="@+id/theChartsRv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="名次"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.08"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.45"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="造成伤害"
            app:layout_constraintHorizontal_bias="0.82"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id='@+id/theChartsRv'
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_200"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>