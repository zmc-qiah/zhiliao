<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_height"
    android:background="@color/bg_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.jxxy.debug.corekit.widget.CommonToolbar
        android:id="@+id/pkToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="脑力达人"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/pkBackgroundIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pkToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/firstPlayerIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pkToolbar"/>

    <TextView
        android:id="@+id/firstPlayerTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"
        android:gravity="left"
        app:layout_constraintEnd_toStartOf="@id/vsIV"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@+id/firstPlayerIv"
        app:layout_constraintTop_toTopOf="@id/firstPlayerIv"
        app:layout_constraintBottom_toBottomOf="@id/firstPlayerIv"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:id="@+id/vsIV"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/firstPlayerIv"
        app:layout_constraintBottom_toBottomOf="@id/firstPlayerIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </ImageView>
    <TextView
        android:id="@+id/firstPlayerScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/firstPlayerIv"
        app:layout_constraintLeft_toLeftOf="@id/firstPlayerIv"
        app:layout_constraintRight_toRightOf="@id/firstPlayerIv"/>

    <TextView
        android:id="@+id/firstPlayerAddTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Big_text_size"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/firstPlayerScoreTv"
        app:layout_constraintBottom_toBottomOf="@id/firstPlayerScoreTv"
        app:layout_constraintLeft_toRightOf="@id/firstPlayerScoreTv"/>

    <ImageView
        android:id="@+id/secondPlayerIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pkToolbar"/>

    <TextView
        android:id="@+id/secondPlayerTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        android:gravity="right"
        app:layout_constraintStart_toEndOf="@id/vsIV"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/secondPlayerIv"
        app:layout_constraintBottom_toBottomOf="@id/secondPlayerIv"
        app:layout_constraintTop_toTopOf="@id/secondPlayerIv"/>

    <TextView
        android:id="@+id/secondPlayerScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Big_text_size"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/secondPlayerIv"
        app:layout_constraintLeft_toLeftOf="@id/secondPlayerIv"
        app:layout_constraintRight_toRightOf="@id/secondPlayerIv"/>

    <TextView
        android:id="@+id/secondPlayerAddTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Big_text_size"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/secondPlayerScoreTv"
        app:layout_constraintBottom_toBottomOf="@id/secondPlayerScoreTv"
        app:layout_constraintRight_toLeftOf="@+id/secondPlayerScoreTv"/>

    <ProgressBar
        android:id="@+id/pkProgressBar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        style="@style/CustomProgressBar"
        android:max="10"
        android:progress="5"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPlayerScoreTv"/>

    <TextView
        android:id="@+id/pkTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Big_text_size"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/pkProgressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <org.jxxy.debug.corekit.widget.RoundConstraintLayout
        android:id="@+id/pkRl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/bg_100"
        app:round_corner="12dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintTop_toBottomOf="@id/pkProgressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/pkQuestionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_100"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:gravity="left|center"
            android:layout_margin="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pkRv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pkRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_100"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pkQuestionTv"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </org.jxxy.debug.corekit.widget.RoundConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>