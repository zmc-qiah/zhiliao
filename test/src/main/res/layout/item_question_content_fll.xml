<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/questionView"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/primary_200"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toLeftOf="@+id/questionTypeTv"
        app:layout_constraintTop_toTopOf="@id/questionTypeTv"
        app:layout_constraintBottom_toBottomOf="@+id/questionTypeTv"/>
    <TextView
        android:id="@+id/questionTypeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/Big_text_size"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />

    <!--    <TextView-->
    <!--        android:id="@+id/questionWayTv"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="8dp"-->
    <!--        android:textSize="@dimen/normal_text_size"-->
    <!--        android:textColor="#0A0A0A"-->
    <!--        app:layout_constraintLeft_toRightOf="@+id/questionTypeTv"-->
    <!--        app:layout_constraintTop_toTopOf="@+id/questionTypeTv"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/questionTypeTv"-->
    <!--        app:layout_constraintWidth_percent="0.6" />-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F7F7F7"
        app:layout_constraintTop_toBottomOf="@+id/questionView"
        app:layout_constraintBottom_toTopOf="@+id/fillText"/>

    <com.chenlittleping.filltextview.FillTextView
        android:id="@+id/fillText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:fillTextSize="16sp"
        app:rowSpace="3dp"
        app:fillColor="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTypeTv"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>