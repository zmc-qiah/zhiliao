<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/pkChooseTv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        android:background="@drawable/button_pk_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/firstPlayerChooseTv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/round_player"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/pkChooseTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/secondPlayerChooseTv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/round_player"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/pkChooseTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>