<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_answer"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/deleteTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/button_delete"
        android:gravity="center"
        android:text="删除"
        android:letterSpacing="0.2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkTv"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:id="@+id/checkTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/button_wrong_check"
        android:gravity="center"
        android:text="查看"
        android:letterSpacing="0.2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/deleteTv"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:layout_marginRight="70dp"
        android:id="@+id/questionContentsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textColor="#0a0a0a"
        app:layout_constraintEnd_toStartOf="@+id/isDoneIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <org.jxxy.debug.corekit.widget.IconFont
        android:id="@+id/isDoneIcon"
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/big_icon_size"
        android:text="&#xe629;"
        android:textSize="@dimen/big_icon_size"
        android:gravity="center"
        android:textColor="#FFD700"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintLeft_toLeftOf="@id/checkTv"
        app:layout_constraintRight_toRightOf="@id/deleteTv"
        app:layout_constraintBottom_toTopOf="@id/deleteTv"
        app:layout_constraintTop_toTopOf="parent" />

